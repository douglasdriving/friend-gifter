{
  "name": "friend-gifting",
  "version": "1.0.0",
  "private": true,
  "description": "A sharing economy platform for friends to share unused items",
  "scripts": {
    "dev": "pnpm run --parallel --filter './packages/*' dev",
    "build": "pnpm run --filter './packages/*' build",
    "lint": "pnpm run --filter './packages/*' lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm run --filter './packages/*' test",
    "clean": "pnpm run --filter './packages/*' clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
